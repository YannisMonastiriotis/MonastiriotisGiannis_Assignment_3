@model IEnumerable<Assignment4.Models.Tshirt>

@{
    ViewBag.Title = "Index";
}

<h2>T-Shirts</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model._Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model._Size)
        </th>
        <th>
            @Html.DisplayNameFor(model => model._Fabric)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item._Color)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._Size)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._Fabric)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
     
    </tr>
}

</table>
